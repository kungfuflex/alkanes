{
  "name": "alkanes",
  "description": "alkanes metaprotocol",
  "version": "0.1.0",
  "main": "lib/index.js",
  "scripts": {
    "prepare": "npm-run-all build bundleup opt",
    "postinstall": "cd runtime && rustup update && cargo build",
    "asbuild:debug": "asc assembly/indexer/index.ts --target debug --enable threads --config asconfig.json --exportRuntime",
    "asbuild:release": "asc assembly/indexer/index.ts --target release --config asconfig.json --exportRuntime",
    "asbuild:test": "asc assembly/index.ts --target release --config asconfig.json",
    "bundleup": "wasm-merge build/debug.wasm alkanes runtime/target/wasm32-unknown-unknown/debug/alkanes_runtime.wasm alkanes_runtime -o build/combined.wasm -n -q -sec --enable-bulk-memory",
    "metadce": "wasm-metadce build/combined-out.wasm --graph-file metadce/graph.json -o build/combined-metadce.wasm --all-features > /dev/null",
    "build": "npm-run-all asbuild:debug asbuild:release build:ts bundleup opt",
    "build:debug:preloader": "npm run asbuild:preloader --sharedMemory",
    "prettier:assemblyscript": "prettier --write ./assembly/**/*.ts --plugin assemblyscript-prettier",
    "prettier:ts": "prettier --write ./src.ts/**/*.ts",
    "prettier": "npm-run-all prettier:assemblyscript prettier:ts",
    "test": "NODE_NO_WARNINGS=1 ts-mocha --timeout 0 ./tests/**.spec.ts",
    "inspect": "wasm-dis",
    "opt": "wasm-opt build/combined.wasm --multi-memory-lowering -n -o build/combined-out.wasm",
    "build:ts": "tsc",
    "full-test-build": "npm-run-all build bundleup opt metadce"
  },
  "dependencies": {
    "binaryen": "^118.0.0",
    "metashrew-runes": "https://github.com/sandshrewmetaprotocols/metashrew-runes",
    "postinstall": "^0.10.3",
    "quorumgenesisprotorune": "https://github.com/kungfuflex/quorumgenesisprotorune"
  },
  "devDependencies": {
    "@scure/btc-signer": "^1.4.0",
    "@types/leb128": "^0.0.0",
    "@types/node": "^20.10.6",
    "assemblyscript": "0.26.7",
    "assemblyscript-prettier": "^3.0.1",
    "chai": "4",
    "fs-extra": "^11.2.0",
    "leb128": "^0.0.5",
    "metashrew-as": "https://github.com/sandshrewmetaprotocols/metashrew-as",
    "metashrew-test": "https://github.com/sandshrewmetaprotocols/metashrew-test",
    "micro-ordinals": "^0.1.1",
    "mocha": "^10.3.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.1.1",
    "protorune": "https://github.com/kungfuflex/protorune",
    "quorumgenesisprotorune": "https://github.com/kungfuflex/quorumgenesisprotorune",
    "rlp": "^3.0.0",
    "ts-mocha": "^10.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
