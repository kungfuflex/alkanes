{
  "name": "alkanes",
  "description": "alkanes metaprotocol",
  "version": "0.1.0",
  "main": "lib/index.js",
  "scripts": {
    "prepare": "yarn bundleup",
    "postinstall": "cd runtime && rustup update && cargo build",
    "asbuild:debug": "asc assembly/indexer/index.ts --target debug --enable threads --config asconfig.json",
    "asbuild:release": "asc assembly/indexer/index.ts --target release --config asconfig.json",
    "asbuild:test": "asc assembly/index.ts --target release --config asconfig.json",
    "bundleup": "wasm-merge runtime/target/wasm32-unknown-unknown/debug/alkanes_runtime.wasm build/debug.wasm -o build/combined.wasm",
    "build": "npm-run-all asbuild:debug asbuild:release",
    "build:debug:preloader": "npm run asbuild:preloader --sharedMemory",
    "prettier:assemblyscript": "prettier --write ./assembly/**/*.ts",
    "prettier:ts": "prettier --write ./src.ts/**/*.ts",
    "prettier": "npm-run-all prettier:assemblyscript prettier:ts",
    "test": "ts-mocha --timeout 0 ./tests/**.spec.ts"
  },
  "dependencies": {
    "binaryen": "^118.0.0",
    "metashrew-runes": "https://github.com/sandshrewmetaprotocols/metashrew-runes",
    "postinstall": "^0.10.3",
    "quorumgenesisprotorune": "https://github.com/kungfuflex/quorumgenesisprotorune"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "assemblyscript": "^0.27.22",
    "assemblyscript-prettier": "^3.0.1",
    "chai": "^5.1.0",
    "fs-extra": "^11.2.0",
    "metashrew-as": "https://github.com/sandshrewmetaprotocols/metashrew-as",
    "metashrew-test": "https://github.com/sandshrewmetaprotocols/metashrew-test",
    "mocha": "^10.3.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.1.1",
    "protorune": "https://github.com/kungfuflex/protorune",
    "quorumgenesisprotorune": "https://github.com/kungfuflex/quorumgenesisprotorune",
    "rlp": "^3.0.0",
    "ts-mocha": "^10.0.0",
    "typescript": "^5.3.3"
  }
}
